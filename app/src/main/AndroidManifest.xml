<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="Sanoj.APKsignerPro">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/sflash"
        android:allowBackup="true">
        <activity android:name="Sanoj.APKsignerPro.ZipPickerActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Sanoj.APKsignerPro.ZipSignerActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="kellinwood.zipsigner.action.SIGN_FILE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="Sanoj.APKsignerPro.customkeys.ManageKeysActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="kellinwood.zipsigner.action.MANAGE_KEYS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="Sanoj.APKsignerPro.filebrowser.AndroidFileBrowser"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="kellinwood.zipsigner.action.BROWSE_FILE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="Sanoj.APKsignerPro.customkeys.ManageKeysHelpActivity"
            android:label="@string/app_name"/>
        <activity android:name="Sanoj.APKsignerPro.customkeys.CreateKeystoreIntroActivity"
            android:label="@string/app_name"/>
        <activity android:name="Sanoj.APKsignerPro.customkeys.CreateKeystoreFormActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="Sanoj.APKsignerPro.customkeys.CreateKeyFormActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="Sanoj.APKsignerPro.customkeys.CreateCertFormActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="Sanoj.APKsignerPro.customkeys.KeysPropertiesActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"/>
    </application>
</manifest>