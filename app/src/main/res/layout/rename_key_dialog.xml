<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rename_key_dialog_layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingBottom="10dp"
              >

    <TextView android:id="@+id/KeystorePasswordLabel"
              android:text="@string/KeystorePasswordLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textStyle="bold"
              android:layout_marginTop="10sp"
        />
    <EditText android:id="@+id/KeystorePassword"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text=""
              android:password="true"
        />

    <TextView android:id="@+id/KeyPasswordLabel"
              android:text="@string/KeyPasswordLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textStyle="bold"
              android:layout_marginTop="10sp"
        />
    <EditText android:id="@+id/KeyPassword"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text=""
              android:password="true"
        />

    <TextView android:text="@string/KeyNameLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textStyle="bold"
        />
    <EditText android:id="@+id/KeyName"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text=""
        />


    <LinearLayout android:orientation="horizontal" 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    
    <Button android:id="@+id/OkButton"
  	    	android:text="@string/OkButtonLabel"
   		    android:layout_width="wrap_content" 
   		    android:layout_height="wrap_content"
   		    android:layout_marginTop="20sp"
   		    android:layout_marginBottom="20sp"
            android:minWidth="100sp"
        />
    <Button android:id="@+id/CancelButton"
  	    	android:text="@string/CancelButtonLabel"
   		    android:layout_width="wrap_content" 
   		    android:layout_height="wrap_content"
   		    android:layout_marginLeft="20sp"
   		    android:layout_marginTop="20sp"
   		    android:layout_marginBottom="20sp"
            android:minWidth="100sp"
        />
    </LinearLayout>                                                           		
</LinearLayout>